{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": ["main"],
  "permissions": [
    "core:default",
    "opener:default",
    "core:window:allow-close",
    "core:window:allow-minimize",
    "core:window:allow-start-dragging",
    "core:window:allow-set-size",
    "allow-get-selected-text",
    "allow-get-clipboard-text",
    "allow-get-text-or-clipboard",
    "allow-backend-prompt","allow-open-editor-window",
    "allow-tts-speak",
    "allow-tts-stop",
    "allow-tts-pause",
    "allow-tts-set-volume",
    "allow-tts-switch-provider",
    "allow-capture-screenshot-and-ocr",
    "allow-open-live-text-viewer",
    "allow-get-platform",
    "allow-open-settings-window",
    "allow-get-config",
    "allow-save-config"
  ]
}
