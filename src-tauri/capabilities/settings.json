{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "settings",
  "description": "Capability for the settings window",
  "windows": ["settings"],
  "permissions": [
    "core:default",
    "core:window:allow-close",
    "core:window:allow-start-dragging",
    "allow-get-config",
    "allow-get-hotkey-status",
    "allow-save-config",
    "allow-list-piper-voices",
    "allow-refresh-piper-voices",
    "allow-list-polly-voices",
    "allow-list-microsoft-voices",
    "allow-download-voice",
    "allow-get-download-progress",
    "allow-list-downloaded-voices",
    "allow-check-polly-credentials"
  ]
}
