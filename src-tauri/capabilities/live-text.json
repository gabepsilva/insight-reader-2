{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "live-text",
  "description": "Capability for live text viewer windows",
  "windows": ["live-text-*"],
  "permissions": [
    "core:default",
    "allow-take-live-text-image-path",
    "allow-take-live-text-data",
    "core:window:allow-set-size",
    "core:window:allow-center",
    "core:window:allow-close",
    "allow-get-platform"
  ]
}
