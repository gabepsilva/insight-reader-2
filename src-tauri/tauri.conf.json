{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "insight-reader-2",
  "version": "0.1.0",
  "identifier": "com.gabriel.insight-reader-2",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Insight Reader",
        "width": 350,
        "height": 260,
        "minWidth": 350,
        "minHeight": 260,
        "resizable": true,
        "decorations": false,
        "shadow": true,
        "alwaysOnTop": true,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": "default-src 'self' asset:; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: http://asset.localhost blob: data:; connect-src 'self' http://localhost:1420 http://localhost:1421 http://localhost:8080 https://api.insightreader.xyz ws://localhost:1420 ws://localhost:1421; font-src 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$TEMP/**",
          "$HOME/Library/Caches/**",
          "$APPDATA/**",
          "$LOCALAPPDATA/**",
          "/tmp/**",
          "/var/folders/**"
        ]
      }
    },
    "trayIcon": {
      "iconPath": "icons/logo.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": true,
      "tooltip": "Insight Reader"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "desktopTemplate": "linux.desktop"
      },
      "rpm": {
        "desktopTemplate": "linux.desktop"
      }
    }
  }
}
