{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Insight Reader",
  "version": "0.1.0",
  "identifier": "com.gabriel.insight-reader-2",
  "build": {
    "beforeDevCommand": "bun run dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "label": "main",
        "title": "Insight Reader",
        "width": 350,
        "height": 260,
        "minWidth": 350,
        "minHeight": 260,
        "resizable": true,
        "decorations": false,
        "shadow": true,
        "alwaysOnTop": true,
        "acceptFirstMouse": true
      }
    ],
    "security": {
      "csp": "default-src 'self' asset:; script-src 'self' 'unsafe-inline' 'unsafe-eval' 'wasm-unsafe-eval'; style-src 'self' 'unsafe-inline'; img-src 'self' asset: http://asset.localhost blob: data:; connect-src 'self' http://localhost:1420 http://localhost:1421 http://localhost:8080 https://api.insightreader.xyz ws://localhost:1420 ws://localhost:1421; font-src 'self'",
      "assetProtocol": {
        "enable": true,
        "scope": [
          "$TEMP/**",
          "$HOME/Library/Caches/**",
          "$APPDATA/**",
          "$LOCALAPPDATA/**",
          "/tmp/**",
          "/var/folders/**"
        ]
      }
    },
    "trayIcon": {
      "iconPath": "icons/logo.png",
      "iconAsTemplate": true,
      "menuOnLeftClick": true,
      "tooltip": "Insight Reader"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Utility",
    "shortDescription": "Read clipboard text aloud with offline and cloud voices.",
    "longDescription": "Insight Reader is a cross-platform desktop text-to-speech app that reads selected or clipboard text aloud. It supports local offline voices (Piper) and cloud voices (Microsoft Edge TTS), making it useful for accessibility, proofreading, and hands-free reading workflows.\n\nReplace this description with your final release copy before public distribution. Add privacy, feature, and support details here.",
    "copyright": "Copyright 2026 Gabriel Silva",
    "publisher": "Gabriel Silva",
    "homepage": "https://api.insightreader.xyz",
    "license": "Proprietary",
    "createUpdaterArtifacts": false,
    "resources": [],
    "externalBin": [],
    "linux": {
      "deb": {
        "desktopTemplate": "linux.desktop"
      },
      "rpm": {
        "desktopTemplate": "linux.desktop"
      },
      "appimage": {
        "bundleMediaFramework": false,
        "files": {}
      }
    },
    "windows": {
      "digestAlgorithm": "sha256",
      "timestampUrl": "http://timestamp.digicert.com",
      "wix": {
        "language": "en-US"
      }
    },
    "macOS": {
      "minimumSystemVersion": "11.0",
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null,
      "exceptionDomain": null
    }
  },
  "plugins": {}
}
